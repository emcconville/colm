{
	CodeBlock *transBlock;
};

opt_translate: 
	block_open lang_stmt_list block_close
	final { 
		$$->transBlock = CodeBlock::cons( $2->stmtList, $1->localFrame );
		$$->transBlock->context = contextStack.top();
	};

opt_translate: 
	final {
		$$->transBlock = 0;
	};

